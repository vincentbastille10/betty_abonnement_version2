{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/app.py" }
  ],
  "env": {
    "FLASK_ENV": "production",
    "SECRET_KEY": "change-me",

    "STRIPE_SECRET_KEY": "sk_live_xxx",
    "STRIPE_WEBHOOK_SECRET": "whsec_xxx",
    "PRICE_ID": "price_xxx",
    "BASE_URL": "https://betty-abonnement-version2.vercel.app",
    "EMBED_BASE": "https://betty-abonnement-version2.vercel.app",

    "LLM_PROVIDER": "openai",
    "OPENAI_API_KEY": "sk-xxxxxx",
    "LLM_MODEL": "gpt-4o-mini",
    "LLM_MAX_TOKENS": "90"
  },
  "installCommand": "pip install -r requirements.txt",
  "outputDirectory": ".",
  "github": {
    "silent": true
  }
}
